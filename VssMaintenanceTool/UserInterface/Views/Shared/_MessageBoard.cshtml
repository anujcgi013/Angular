@model Volvo.MaintenanceTool.UserInterface.Models.MaintenanceInformationModel
<div class="modal-dialog modal-lg">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h4 class="modal-title" id="myModalLabel">Maintenance Information - @Html.DisplayFor(m => m.Id)</h4>
        </div>
        <div class="modal-body">
            <div class="row" style="margin-bottom:5px;">
                <div class="col-md-2 col-sm-4">
                    @Html.LabelFor(m => m.ValidFrom, null, new { @class = "control-label" })
                </div>
                <div class="col-md-4 col-sm-8">
                    @Html.TextBoxFor(m => m.ValidFrom, null, new { @class = "form-control" })
                </div>
                <div class="col-md-2 col-sm-4">
                    @Html.LabelFor(m => m.ValidTo, null, new { @class = "control-label" })
                </div>
                <div class="col-md-4 col-sm-8">
                    @Html.TextBoxFor(m => m.ValidTo, null, new { @class = "form-control" })
                </div>
            </div>
            <div class="row" style="margin-bottom:5px;">
                <div class="col-md-2 col-sm-4">
                    @Html.LabelFor(m => m.CreatedBy, null, new { @class = "control-label" })
                </div>
                <div class="col-md-4 col-sm-8">
                    @Html.TextBoxFor(m => m.CreatedBy, null, new { @class = "form-control" })
                </div>
                <div class="col-md-2 col-sm-4">
                    @Html.LabelFor(m => m.Created, null, new { @class = "control-label" })
                </div>
                <div class="col-md-4 col-sm-8">
                    @Html.TextBoxFor(m => m.Created, null, new { @class = "form-control", @readonly = "readonly" })
                </div>
            </div>
            <div class="row" style="margin-bottom:5px;">
                <div class="col-md-2 col-sm-4">
                    @Html.LabelFor(m => m.Header, null, new { @class = "control-label" })
                </div>
                <div class="col-md-4 col-sm-8">
                    @Html.TextBoxFor(m => m.Header, null, new { @class = "form-control" })
                </div>
                <div class="col-md-2 col-sm-4">
                    @Html.LabelFor(m => m.Message, null, new { @class = "control-label" })
                </div>
                <div class="col-md-4 col-sm-8">
                    @Html.TextAreaFor(m => m.Message, new { @class = "form-control input-lg col-sm-8", @style = "height:100px;" })
                </div>
            </div>
            <div class="col-md-2 col-sm-6" style="display:none;">
                <div class="row">
                    <div class="col-md-12">
                        @Html.DisplayNameFor(model => model.Id)
                    </div>
                    <div class="col-md-12">
                        @Html.TextBoxFor(model => model.Id, new { @class = "form-control" })
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-dismiss="modal" style="background-color:red; border-color:red; opacity:0.65;">Close</button>
                <input id="btnUpdateMessage" class="btn btn-primary" value="Update" type="submit" name="btnUpdateMessage" />
            </div>
        </div>
    </div>
</div>
@section scripts{

}